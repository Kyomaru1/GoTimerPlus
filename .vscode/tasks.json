{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Make Project",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "dependsOn": [
                "Clean Project",
                "Generate Assets"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Generate Assets",
            "type" : "shell",
            "command": "./.vscode/Scripts/sh/convert_all.sh",
            "args": [
                "${workspaceFolder}/graphics",
                "${workspaceFolder}/nitrofiles"
            ]
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "Run ROM (Desmume)",
            "type": "shell",
            "linux":{
                "command": "desmume ${workspaceFolder}/GoTimerPlus.nds",
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "dependsOn": [
                "Make Project"
            ],
            "dependsOrder": "sequence"
        },
        {
            "label": "Copy Build to SD Card",
            "type": "shell",
            "linux":{
                "command": ".vscode/copy_to_sd_linux.sh",
            },
            "args": [
                "${workspaceFolder}/GoTimerPlus.nds",
                "${input:password}"
            ],
            "problemMatcher": [],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "[NDS] Convert Images of Type...",
            "type": "shell",
            "linux":{
                "command": ".vscode/Scripts/sh/convert_${input:imageType}.sh",
            },
            "windows":{
                "command": ".vscode/Scripts/batch/convert_${input:imageType}.sh",
            },
            "args": [
                "${workspaceFolder}/graphics/${input:imageType}",
                "${workspaceFolder}/nitrofiles",
                "true"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            },
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "password",
            "description": "Root Password",
            "password": true,
            "type":"promptString"
        },
        {
            "id": "imageType",
            "description": "Image Group to Convert",
            "type":"pickString",
            "options": [
                "backgrounds",
                "fonts",
                "affine",
                "bitmap16",
                "bitmap8",
                "bitmap8_shared",
                "cmaps",
                "sprites_autopal",
                "sprites"
            ]
        }
    ]
}